<% layout('boilerplate') -%> 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <h1 class="mb-4">Welcome to EstateEase</h1>
                    <p class="text-muted mb-5">Please select your login type to continue</p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h3 class="card-title">User Login</h3>
                                    <p class="card-text text-muted">Access your personal account to manage your properties and listings</p>
                                    <a href="/login" class="btn btn-primary w-100">Login as User</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h3 class="card-title">Admin Login</h3>
                                    <p class="card-text text-muted">Access the admin dashboard to manage listings and users</p>
                                    <a href="/admin/login" class="btn btn-primary w-100">Login as Admin</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

