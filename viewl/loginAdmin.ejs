<% layout('boilerplate') -%> 
<div class="flex justify-center items-center w-full h-full bg-[#C68EFD]">
    <div class="bg-white w-[700px] h-[530px] flex flex-col justify-center items-center m-20 text-black rounded-3xl shadow-lg shadow-gray-500">
        <div class="mt-6 mr-4">
            <span class="text-xl flex font-bold">Admin Login</span>
        </div>
        
        <div class="userLogo rounded-full bg-[#C68EFD] flex w-20 h-20 flex justify-center items-center mt-6 text-3xl">
            <i class="fa-solid fa-user-shield"></i>
        </div>
        
        <form action="/admin/login" method="POST" autocomplete="off" class="mt-14 flex flex-col needs-validation" novalidate>
            <input name="username" id="username" type="text" class="p-2 w-72 font-bold shadow-white shadow-sm"
                placeholder="Admin Username" required />
            
            <input name="password" id="password" type="password" class="password p-2 font-bold w-72 shadow-white shadow-sm mt-5"
                placeholder="Password" required />
            
            <button class="text-white bg-[#A4B465] mt-5 w-72 h-10 rounded-2xl cursor-pointer text-xl hover:bg-slate-500 shadow-sm shadow-slate-400">
                Login
            </button>
        </form>
    </div>
</div> 