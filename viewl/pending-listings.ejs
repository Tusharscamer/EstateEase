<% layout('boilerplate') -%>
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Pending Listings</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% pendingListings.forEach(listing => { %>
            <div class="bg-white rounded-lg shadow-lg p-6">
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="w-full h-96 object-cover rounded-lg mb-4">
                <h2 class="text-xl font-semibold mb-2"><%= listing.title %></h2>
                <p class="text-gray-600 mb-2">Location: <%= listing.location %></p>
                <p class="text-gray-600 mb-2">Price: $<%= listing.price %></p>
                <p class="text-gray-600 mb-4">Owner: <%= listing.owner.email %></p>
                
                <div class="flex space-x-4">
                    <form action="/admin/verify-listing/<%= listing._id %>" method="POST" class="flex-1">
                        <input type="text" name="verificationNotes" placeholder="Verification notes" class="w-full p-2 border rounded mb-2">
                        <button type="submit" class="w-full bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                            Verify
                        </button>
                    </form>
                    
                    <form action="/admin/reject-listing/<%= listing._id %>" method="POST" class="flex-1">
                        <input type="text" name="verificationNotes" placeholder="Rejection reason" class="w-full p-2 border rounded mb-2">
                        <button type="submit" class="w-full bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                            Reject
                        </button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</div> 